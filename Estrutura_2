#include <iostream>



#define TAM 5
#define VAZIO 0

int vetorRAs[TAM] = {VAZIO};

void carregar(int vetor[]) {
    int i = 0;
    
    for (i = 0; i < TAM; i++) {
    	scanf("%i", &vetorRAs[i]);
	}
}

void exibir(int vetor[]) {
    int i = 0;
    
    for (i = 0; i < TAM; i++){
    	printf("%i \n", vetor[i]);
	}
    
}

void removerRa(int vetor[], int ra) {
    int i = 0;
    
    for (i = 0; i < TAM; i++){
    	if (vetor[i] == ra) {
    		vetor[i] = VAZIO;
		}
	}
}

int contarRas(int vetor[], int ra) {
	int i = 0, contador = 0;
	
	contador = 0;
	
	for (i = 0; i < TAM; i++){
		if (vetor[i] != VAZIO) {
			contador++
		}
	}
	
    return contador;
}

void contar(int vetor[]){
	int i = 0, contador = 0;
	
	for (i = 0; i < TAM; i++){
		if (vetor[i] != VAZIO) {
			contador++
		}	
	}
	printf("Existem %i RAs cadastrados!", contador);
}

int maiorRa(int vetor[]){
    return -1;
}

void menu(){
    int opc = 0;
    int numero = 0;
    
    do {
        
        printf("\n::SYSCAD::..\n");
        printf("1. Carregar\n");
        printf("2. Exibir\n");
        printf("3. Remover RA\n");
        printf("4. Contar RAs\n");
        printf("5. Maior RA\n");
        printf("Digite: ");
        scanf("%i", &opc);
        
   

switch (opc) {
    case 1: {
    	carregar(vetorRAs);
        break;
    }
    case 2: {
    	exibir(vetorRAs);
        break;
    }
    case 3: {
    	scanf("%i", &numero);
    	removerRa(vetorRAs, numero);
        break;
    }
    case 4: {
        break;
    }
    case 5: {
    
    }
    
    
	   	}
	 } while (opc != 9);
}

int main(int argc, char** argv) {
	
	menu();
	
	return 0;
}
