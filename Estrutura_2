#include <iostream>
#include <time.h>


#define TAM 100
#define VAZIO 0

int vetorRAs[TAM] = {VAZIO};

void carregar(int vetor[]) {
    int i = 0;
    srand((unsigned int)time(NULL));
    
    
    for (i = 0; i < TAM; i++) {
    	int randomNum = rand() % 30;
    	vetor[i] = randomNum;
    	// scanf("%i", &vetorRAs[i]);
	}
}

void exibir(int vetor[]) {
    int i = 0;
    
    for (i = 0; i < TAM; i++){
    	printf("%i \n", vetor[i]);
	}
    
}

void removerRa(int vetor[], int ra) {
    int i = 0;
    
    for (i = 0; i < TAM; i++){
    	if (vetor[i] == ra) {
    		vetor[i] = VAZIO;
		}
	}
}

int contarRas(int vetor[]) {
	int i = 0, contador = 0;
	
	contador = 0;
	
	for (i = 0; i < TAM; i++){
		if (vetor[i] != VAZIO) {
			contador++;
		}
	}
	
    return contador;
}

void contar(int vetor[]){
	int i = 0, contador = 0;
	
	for (i = 0; i < TAM; i++){
		if (vetor[i] != VAZIO) {
			contador++;
		}	
	}
	printf("Existem %i RAs cadastrados!", contador);
}

int maiorRa(int vetor[]){
	int i = 0, maior = 0;
	
	for(i = 0; i < TAM; i++){
		if (vetor[i] > maior) {
			maior = vetor[i];
		}
	}
	
    return maior;
}

void menu(){
    int opc = 0;
    int numero = 0;
    int greater = 0;
    
    do {
        
        printf("\n::SYSCAD::..\n");
        printf("1. Carregar\n");
        printf("2. Exibir\n");
        printf("3. Remover RA\n");
        printf("4. Contar RAs\n");
        printf("5. Maior RA\n");
        printf("Digite: ");
        scanf("%i", &opc);
        
   

switch (opc) {
    case 1: {
    	carregar(vetorRAs);
        break;
    }
    case 2: {
    	exibir(vetorRAs);
        break;
    }
    case 3: {
    	scanf("%i", &numero);
    	removerRa(vetorRAs, numero);
        break;
    }
    case 4: {
    	numero = contarRas(vetorRAs);
    	printf("Exite(m) %i RA(s) cadastrado(s)!", numero);
        break;
    }
    case 5: {
    greater = maiorRa(vetorRAs);
    printf("o maior RA e %i", greater);
    }
    
    
	   	}
	 } while (opc != 9);
}

int main(int argc, char** argv) {
	
	menu();
	
	return 0;
}
