----------------------------------------------------------------------------------------------------------------------------------------------------// Q1
/******************************************************************************
1. PRÁTICA - Crie uma aplicação console que seja responsável por calcular a área de 3 figuras geométricas.
  1.1) Utilize um método para contrução do menu. 
  1.2) Utilize métodos para realização das operações de cálculo das áreas das figuras geométricas.  
*******************************************************************************/
#include <stdio.h>

#define PI 3.1416
  // calculo area do triangulo
  float calcularAreaTriangulo(float base, float altura) {
    return (base * altura) / 2;
  }
  
  // calculo area do quadrado
  float calcularAreaQuadrado(float lado) {
      return lado * lado;
  }
  
  // calculo area do circulo
  float calcularAreaCirculo(float raio) {
      return PI * (raio * raio);
  }
  
  // calculo do retangulo
  float calcularAreaRetangulo(float base, float altura) {
    return (base * altura);
  }
  
  
  // Menu
  void mainMenu() {
    
    // variaveis
    float a, b;
    int opc = 0;
    float ultimoResultado = 0;  
      
    
    do {
      printf("\n::::::::::MENU::::::::::\n");
      printf("\n1. Area do triangulo");
      printf("\n2. Area do quadrado");
      printf("\n3. Area do circulo");
      printf("\n4. Area do retangulo");
      printf("\n9. Sair");
      printf("\nDigite: ");
      scanf("%d", &opc);
      
      if (opc == 1) {
        printf("\ndigite a base: ");
        scanf("%f", &a);
        printf("\ndigite a altura: ");
        scanf("%f", &b);
        ultimoResultado = calcularAreaTriangulo(a, b);
        printf("\n Area do triangulo é: %f", ultimoResultado); 
      } else if (opc == 2) {
        printf("\ndigite o lado: ");
        scanf("%f", &a);
        ultimoResultado = calcularAreaQuadrado(a);
        printf("\n Area do quadrado é: %f", ultimoResultado); 
      } else if (opc == 3) {
        printf("\ndigite o raio: ");
        scanf("%f", &a);
        ultimoResultado = calcularAreaCirculo(a);
        printf("\n Area do circulo é: %f", ultimoResultado); 
      } else if (opc == 4) {
        printf("\ndigite a base: ");
        scanf("%f", &a);
        printf("\ndigite a altura: ");
        scanf("%f", &b);
        ultimoResultado = calcularAreaRetangulo(a, b);
        printf("\n Area do retangulo é: %f", ultimoResultado);
      } 
      
      
      
    } while (opc != 9);
  }
  

int main() {
 
  mainMenu(); // iniciando o menu

    return 0;
}
----------------------------------------------------------------------------------------------------------------------------------------------------// Q2
#include <stdio.h>

#define MAX 10

int main() {

    float notas[MAX];
    int opc = 0;
    int qtd = 0;        // controla quantas notas foram inseridas
    int i;
    int continuar;

    do {
        printf("\n:::::::::: MENU ::::::::::\n");
        printf("1. Carregar notas\n");
        printf("2. Exibir notas\n");
        printf("3. Contagem de notas\n");
        printf("4. Calcular media\n");
        printf("5. Identificar maior e menor nota\n");
        printf("6. Contagem por faixa\n");
        printf("9. Sair\n");
        printf("Digite: ");
        scanf("%d", &opc);

        // 2.1 Carregar notas
        if (opc == 1) {
            do {
                if (qtd >= MAX) {
                    printf("Limite de %d notas atingido.\n", MAX);
                    break;
                }

                printf("Digite a media final do aluno: ");
                scanf("%f", &notas[qtd]);
                qtd++;

                printf("Deseja informar outra nota? (1 = sim / 0 = nao): ");
                scanf("%d", &continuar);

            } while (continuar == 1);
        }

        // 2.2 Exibir notas
        else if (opc == 2) {
            if (qtd == 0) {
                printf("Nenhuma nota cadastrada.\n");
            } else {
                for (i = 0; i < qtd; i++) {
                    printf("Nota %d = %.2f\n", i + 1, notas[i]);
                }
            }
        }

        // 2.3 Contar notas
        else if (opc == 3) {
            printf("Numero de notas informadas: %d\n", qtd);
        }

        // 2.4 Calcular media
        else if (opc == 4) {
            if (qtd == 0) {
                printf("Nenhuma nota para calcular media.\n");
            } else {
                float soma = 0;
                for (i = 0; i < qtd; i++) {
                    soma += notas[i];
                }
                printf("Media das notas: %.2f\n", soma / qtd);
            }
        }

        // 2.5 Maior e menor nota
        else if (opc == 5) {
            if (qtd == 0) {
                printf("Nenhuma nota cadastrada.\n");
            } else {
                float maior = notas[0];
                float menor = notas[0];

                for (i = 1; i < qtd; i++) {
                    if (notas[i] > maior)
                        maior = notas[i];
                    if (notas[i] < menor)
                        menor = notas[i];
                }

                printf("Maior nota: %.2f\n", maior);
                printf("Menor nota: %.2f\n", menor);
            }
        }

        // 2.6 Contagem por faixa
        else if (opc == 6) {
            int menores6 = 0;
            int entre6e10 = 0;

            for (i = 0; i < qtd; i++) {
                if (notas[i] < 6.0)
                    menores6++;
                else if (notas[i] >= 6.0 && notas[i] <= 10.0)
                    entre6e10++;
            }

            printf("Total de notas: %d\n", qtd);
            printf("Notas menores que 6.0: %d\n", menores6);
            printf("Notas entre 6.0 e 10.0: %d\n", entre6e10);
        }

        else if (opc == 9) {
            printf("Encerrando programa...\n");
        }

        else {
            printf("Opcao invalida.\n");
        }

    } while (opc != 9);

    return 0;
}
