/******************************************************************************
Crie uma aplicação para armazenar idades de pelo de no maximo 50 alunos.
essa aplicação devera ter as seguintes operações: 
a) Carregar; 
b) Exibir; 
c) Limpar todas;
d) Maior idade; 
e) Qtde de idades carregadas; 
f) idade média.
*******************************************************************************/

#include <stdio.h>

int main()
{

int vidades[8] = {0};
int i = 0;
int opc = 0;
int maior = 0;
int contador = 0;

do {
    printf("\nCONTROLE DE IDADE\n");
    printf("1. Carregar\n");
    printf("2. Exibir\n");
    printf("3. Limpar\n");
    printf("4. Maior\n");
    printf("5. Qtde idades\n");
    printf("6. Idade média\n");
    printf("7. Limpar slot\n");
    printf("9. Sair\n");
    printf("Digite: ");
    scanf("%i", &opc);
    
    if (opc == 1) {
        for (i = 0; i < 8; i++) {
        printf("\nInforme idade: [%i]", i);
        scanf("%i", &vidades[i]);
        }
    } else if (opc == 2) {
        printf("\nExibindo.\n");
        for (i = 0; i < 8; i++){
        printf("[%i] = %i\n", i, vidades[i]);
        }
    } else if (opc == 3) {
        for (i = 0; i < 8; i++){
        vidades[i] = 0;
        } 
        printf("\nTodos os campos foram limpos!.\n");
    } else if (opc == 4) {
        maior = vidades[0];
        for (i = 0; i < 8; i++){
            if (vidades[i] > maior) {
            maior = vidades[i];
            }
        }
        printf("\nA maior idade é: %i\n", maior);
    } else if (opc == 5) {
        contador = 0;
        for (i = 0; i < 8; i++){
            if (vidades[i] != 0){
            contador = contador + 1;
            }
        }
        printf("\nExistem %i slots ocupados,\n", contador);
    } else if (opc == 6) {
        
    } else if (opc == 7) {
    printf("\nInforme a posição a ser limpa: ");
    scanf("%i", &i);
    vidades[i-1] = 0;
    };
    
    
} while (opc != 9);



    return 0;
}
